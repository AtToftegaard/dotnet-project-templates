{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true,
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all-non-major-dependencies"
        }
    ],
    "separateMajorMinor": true
}