{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true,
    "azureWorkItemId": 455755,
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all-non-major-dependencies"
        }
    ],
    "prHeader": "##Type of update \n - {{#if (isMajor)}}[ ]{{else}}[X]{{/if}} Patch \n - [ ] Feature \n - {{#if (isMajor)}}[X]{{else}}[ ]{{/if}} Breaking",
    "separateMajorMinor": true
}